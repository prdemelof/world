.fb-button
  display: inline-block;
  margin: 0;
  padding: 0.563rem 0.844rem;
  border: 0 none;
  background: #1fa3ec
  color: #fff
  text-align: center;
  text-decoration: none;
  font-size: 12px;
  line-height: 1.5;
  cursor: pointer;
  -webkit-border-radius: 0.356rem;
  -moz-border-radius:    0.356rem;
  border-radius:         0.356rem;
  -webkit-box-shadow: inset 0 -2px 0 hsla(0, 0%, 0%, 0.12);
  -moz-box-shadow:    inset 0 -2px 0 hsla(0, 0%, 0%, 0.12);
  box-shadow:         inset 0 -2px 0 hsla(0, 0%, 0%, 0.12);

  &[disabled]
    background: #ddd !important;
    -webkit-box-shadow: none !important;
    -moz-box-shadow:    none !important;
    box-shadow:         none !important;
    color: #777 !important;
    text-shadow: none !important;
    -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=65)";
    opacity: 0.65;
    cursor: default

.fb-clear
  clear: both

.fb-main
  max-width: 1000px
  margin: 0 auto
  padding: 0 20px 0 0
  position relative

.fb-save-wrapper
  position absolute
  right: 20px
  top: 10px

.fb-left
  width: 320px
  float: left
  padding-top: 30px

.fb-right
  padding-top: 70px
  margin-left: 320px
  border-left: 1px solid #ddd
  padding-left: 20px
  min-height: 100%
  overflow hidden

.fb-no-response-fields
  color: #999

.fb-tabs
  list-style: none
  margin: 0 0 20px 0
  padding: 0 0 0 20px
  border-bottom: 1px solid #ccc

  li
    display: inline-block

    a
      display block
      padding: 10px
      border-radius: 5px 5px 0 0
      font-size: 13px
      cursor: pointer
      border-left: 1px solid transparent
      border-right: 1px solid transparent

    &.active
      a
        border: 1px solid #ccc
        margin-bottom: -1px
        border-bottom-color: #fff

.fb-tab-content
  .fb-tab-pane
    padding: 0 20px
    display: none

    &.active
      display: block

.fb-add-field-types
  .section
    padding-bottom: 5px
    margin-bottom: 20px

  a
    display: inline-block
    width: 45%
    background-color: #666
    margin-bottom: 5px

.fb-response-fields
  padding-bottom: 150px

  a.sortable-placeholder
    display: block
    border: 1px dashed #ddd
    min-height: 80px
    height: 80px
    width: 100%

.fb-field-wrapper
  cursor: pointer
  position: relative
  margin-bottom: 20px

  &:hover, &.editing
    .actions-wrapper
      display: block

  &:hover
    .subtemplate-wrapper
      border-color: #ddd

  &.editing
    background-color: #dfefff

    .subtemplate-wrapper
      border-color: #c2d7ef
      border-style: solid

  /* remove/duplicate buttons */
  .actions-wrapper
    display: none
    position: absolute
    bottom: -7px
    right: 5px
    z-index: 3

    a
      display: inline-block
      background-color: #ccc
      padding: 2px 8px

      &.js-duplicate
        background-color green

      &.js-clear
        background-color red

  .subtemplate-wrapper
    border: 1px dashed transparent
    margin-bottom: 10px
    padding: 10px
    position: relative

    .cover
      position: absolute
      top: 0
      left: 0
      height: 100%
      width: 100%
      z-index: 2

    > label
      display: block
      font-weight: bold
      margin-bottom: 5px

    abbr
      color red


  .input-line
    clear both
    margin-bottom: 10px

    .above-line
      margin-top: 7px

    > span
      display: inline-block
      vertical-align: top

      input
        width: 100%

      > label
        display block
        font-size: 13px
        margin-left: 3px

  .help-block
    display block
    font-size: 12px
    margin-top: 5px

.fb-edit-field-wrapper
  font-size: 13px

  .fb-field-label
    font-weight: bold
    font-size: 16px

  .fb-edit-section-header
    font-weight: bold
    border-bottom: 1px solid #ccc
    margin-top: 15px
    margin-bottom: 5px
    clear: both

  .js-add-option, .js-remove-option
    padding: 3px 6px

  .js-add-option
    background-color green

  .js-remove-option
    background-color red

  .fb-bottom-add
    margin-top: 8px

.fb-common-wrapper
  .fb-label-description
    float: left
    width: 180px

    input, textarea
      width: 100%

  .fb-common-checkboxes
    margin-left: 190px

.response-field-draggable-helper
  border: 1px dashed #ddd
  background: #eee


// FIELD TYPES
.response-field-address
  .street
    width: 400px

  .city, .state, .zip, .country
    width: 198px

.response-field-date
  .month, .day, .year
    width: 50px

.response-field-time
  .hours, .minutes, .seconds
    width: 50px

.response-field-checkboxes, .response-field-radio
  .fb-option
    margin-bottom: 5px
    display: inline-block
